@{
}

@model ASPMVCAssign.Models.EmployeeEntities.Employee
<h1>Edit Employee Data</h1>


@if (Model == null)
{
    <p>No Employee found with this ID</p>
}
else
{
    <form asp-action="EditEmployee" method="post">
        <input type="hidden" asp-for="EmployeeId" />
        <div class="mt-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="FirstName" required>
        </div>
        <div class="mt-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" asp-for="LastName" required>
        </div>
        <div class="mt-3">
            <label class="form-label">BirthDate</label>
            <input type="date" class="form-control" asp-for="BirthDate" required>
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" required>
        </div>
        <div class="mt-3">
            <label class="form-label">EmploymentDate</label>
            <input type="date" class="form-control" asp-for="EmploymentDate" required>
        </div>
        <div class="mt-3">
            <label class="form-label">Address</label>
            <textarea class="form-control" asp-for="Address" rows="3" required></textarea>
        </div>
        <div class="mt-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="City" required>
        </div>
        <div class="mt-3">
            <label class="form-label">State</label>
            <input type="text" class="form-control" asp-for="State" required>
        </div>
        <div class="mt-3">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" asp-for="Country" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Update Employee</button>
    </form>
}